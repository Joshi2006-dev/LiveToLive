<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/livetolive"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/poppins_bold"
                android:text="LiveToLive"
                android:textColor="@color/hidra"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="APLICACIÓN"
                android:textColor="@color/hidra" />
        </LinearLayout>

    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/aniBNV"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/welcome"
        android:scaleY="1.6"
        android:scaleX="1.6"/>

    <TextView
        android:id="@+id/txtBnv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aniBNV"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="¡BIENVENIDO!"
        android:textColor="@color/hidra"
        android:textSize="50sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/btnComenzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBnv"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/hidra"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:text="Comenzar →"
        android:textSize="20sp" />

</RelativeLayout>