<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:id="@+id/scroller"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
            <ImageView
                android:padding="5dp"
                android:id="@+id/btnVolver"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/previous"
                android:scaleType="fitXY"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_bold"
                android:text="Perfil"
                android:textColor="#064751"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profilegradient"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/rlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp">

                    <ImageView
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/white" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/profile_example"
                        app:shapeAppearanceOverlay="@style/roundedImageView" />

                    <ImageView
                        android:id="@+id/btnEditPhoto"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="#064751"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:src="@drawable/edit_icon" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:layout_below="@+id/rlayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Alvaro Soto"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txtNombreUsuario"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/pasosprofile" />

                        <TextView
                            android:id="@+id/txtPasosTotales"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="14,500"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:fontFamily="@font/poppins"
                            android:text="Pasos realizados"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/sleepprofile" />

                        <TextView
                            android:id="@+id/txtHorasTotales"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="29"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:fontFamily="@font/poppins"
                            android:text="Horas de sueño"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/waterprofile" />

                        <TextView
                            android:id="@+id/txtLitrosTotales"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="18.9"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:fontFamily="@font/poppins"
                            android:text="Litros tomados"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="340dp"
                android:layout_height="23dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Información Personal"
                android:textColor="#064751"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnEditInfo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/edit_icon2" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#064751"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#ededed"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#064751"
                                android:padding="13dp"
                                android:src="@drawable/weight" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:fontFamily="@font/poppins"
                                android:text="Mi peso (Kg):"
                                android:textColor="#064751"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtPeso"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="73 Kg"
                                android:textColor="#064751"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#ededed"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#064751"
                                android:padding="13dp"
                                android:src="@drawable/height" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:fontFamily="@font/poppins"
                                android:text="Mi altura (m):"
                                android:textColor="#064751"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtAltura"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="1.75 m"
                                android:textColor="#064751"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#ededed"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#064751"
                                android:padding="13dp"
                                android:src="@drawable/edad" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:fontFamily="@font/poppins"
                                android:text="Edad:"
                                android:textColor="#064751"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtEdad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="21 años"
                                android:textColor="#064751"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#ededed"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#064751"
                                android:padding="13dp"
                                android:src="@drawable/genre" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:fontFamily="@font/poppins"
                                android:text="Sexo:"
                                android:textColor="#064751"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtSexo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Masculino"
                                android:textColor="#064751"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ededed">

                    <TextView
                        android:id="@+id/txtIMC"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:text="23.8"
                        android:textColor="#064751"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@+id/txtIMC"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins"
                        android:text="kg/m²"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txtIMC"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="IMC Aproximado"
                        android:textColor="#064751"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/txtIMC"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/txtIMCindicator"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:background="#00bf63"
                            android:fontFamily="@font/poppins"
                            android:padding="7dp"
                            android:text="PESO NORMAL"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>
</ScrollView>